{% extends "layout.njk" %}

{% block content %}


<section class="cards">
{% for item in items %}
  <div class="card" id="{{item.id}}">
    <div class="card__image">
      <img src="{{item.url}}" alt="{{item.name}}">
    </div>
    <div class="card__content">
      <p>{{item.name}}</p>
    </div>
    <div class="card__info">
      <p>{{item.info}}</p>
      <p class="card__info-price">{{item.price}}</p>
    </div>
  </div>
{% endfor %}
</section>


<script src="scripts.js"></script>

{% endblock %}