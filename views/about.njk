{% extends "layout.njk" %}

{% block content %}
<div id="wrapper">
  <img src="{{about.avatar_url}}" alt="{{about.name}}">
  <h1>{{about.name}}</h1>
  <p>{{about.description}}</p>

  {% for tecnology in about.tecnologies %}
  <ul>
    <li>{{tecnology}}</li>
  </ul>
{% endfor %}
</div>

<div id="links-footer" class="links">
{% for link in about.links %}
  <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
{% endfor %}
</div>

{% endblock %}